{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "POMODORO APP",
  "version": "0.1.0",
  "identifier": "com.bhanuka.pomodoro-app",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "POMODORO APP",
        "width": 360,
        "height": 700,
        "resizable": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}